{{page-title "Diagrams"}}
<section class="working_area">
  <WorkBar @name={{t "diagrams.dlist"}}>
    <button type="button" class="btn_primary">{{t "diagrams.dadd"}}</button>
  </WorkBar>
  <div class="filter_wrapper">
    <div>
      <div class="select_search filter_search_type select_search_label">{{t "admin.users.navsearchfor"}}</div>
      <div class="select_search filter_search_value select_search_label">
        {{#if this.isName}}
          {{t "filter.selectname"}}
        {{/if}}
        {{#if this.isTags}}
          {{t "filter.selecttags"}}
        {{/if}}
      </div>
    </div>
    <PowerSelect
      @triggerClass="select_search filter_search_type search_select"
      @options={{this.searchTypes}}
      @selected={{this.searchType}}
      @onChange={{this.onTypeChange}} as |type|>
      {{type}}
    </PowerSelect>
    {{#if this.isName}}
      <Input @input={{this.onInput}} type="text" class="search_select filter_search_value"
             @value={{this.searchString}}></Input>
    {{/if}}
    {{#if this.isTags}}
      <Input @input={{this.onInput}} type="text" class="search_select filter_search_value"
             @value={{this.searchString}}></Input>
    {{/if}}
  </div>
  <div class="tags_list_line tags_list_caption diag_list_caption">
    <div class="diag_list_item_1">{{t "diagrams.dname"}}</div>
    <div class="diag_list_item_2">{{t "diagrams.dchngbywhom"}}</div>
    <div class="diag_list_item_3">{{t "diagrams.dlastchanged"}}</div>
  </div>
  <div class="diag_list">
    {{#each @model.diagrams as |diagram|}}
      <div class="tags_list_line">
        <div class="diag_list_item_1 paz_clickable_link">
          <LinkTo @route="auth.config.diagram" @model={{diagram.id}}>{{diagram.name}}</LinkTo>
        </div>
        <div class="diag_list_item_2">{{t "diagrams.dchngbywhom"}}</div>
        <div class="diag_list_item_3">{{t "diagrams.dlastchanged"}}</div>
      </div>
    {{/each}}
  </div>
</section>